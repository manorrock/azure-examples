<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>examples.azure</groupId>
    <artifactId>project</artifactId>
    <version>1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Azure Examples Project</name>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.microsoft.azure</groupId>
                    <artifactId>azure-webapp-maven-plugin</artifactId>
                    <version>1.8.0</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <version>1.8</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.1</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>2.3</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>javax</groupId>
                <artifactId>javaee-web-api</artifactId>
                <version>8.0.1</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <profiles>
        <profile>
            <id>safeguard</id>
            <modules>
                <module>acr-create</module>
                <module>acr-create-access-keys-settings-xml</module>
                <module>aks-create</module>
                <module>aks-create-kube-config</module>
                <module>aks-deploy-nginx-ingress-controller</module>
                <module>aks-install-tiller</module>
                <module>aks-springboot</module>
                <module>aks-tomcat</module>
                <module>aks-use-your-acr</module>
                <module>aks-wildfly</module>
                <module>appservice-delete</module>
                <module>appservice-docker-custom</module>
                <module>appservice-docker-glassfish</module>
                <module>appservice-docker-graalvm</module>
                <module>appservice-docker-jetty</module>
                <module>appservice-docker-payara</module>
                <module>appservice-docker-tomcat</module>
                <module>appservice-docker-wildfly</module>
                <module>appservice-javase-springboot</module>
                <module>appservice-javase-quarkus</module>
                <module>appservice-list</module>
                <module>appservice-tomcat-helloworld</module>
                <module>appserviceplan-create</module>
                <module>appserviceplan-delete</module>
                <module>appserviceplan-scale-manually</module>
                <module>cosmosdb-create</module>
                <module>function-java</module>
                <module>keyvault-create</module>
                <module>resourcegroup-create</module>
                <module>resourcegroup-delete</module>
                <module>springcloud-helloworld</module>
                <module>spring-cloud</module>
            </modules>
        </profile>
    </profiles>
    <properties>
        <example.postfix>${maven.build.timestamp}</example.postfix>
        <example.prefix>examples</example.prefix>
        <maven.build.timestamp.format>yyyyMMddHHmm</maven.build.timestamp.format>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>
